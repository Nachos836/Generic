.container {
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    min-height: 24px;
    align-content: stretch;
}

.key-field {
    flex-grow: 1;
    max-width: 40%;
}

.key-field > .unity-base-field > .unity-base-field__label {
    display: none;
}

.value-field {
    flex-grow: 1;
    margin-left: 4px;
}

.value-field > .unity-base-field > .unity-base-field__label {
    display: none;
}
